
<%- include("../partials/header.ejs")%>

    <article class="container-fluid">

        <%if(flash && flash.length > 0){%>
            <div class="col-8 my-md-5 mx-auto alert alert-success">
                <h4><%= flash[0]%> </h4>
            </div>
        <%}%>

        <div class="row">

            <div class=" col-12 col-md-6">
                <div class="col-12 col-md-10 my-5 m-md-5 border border-dark">
                    <form class="form-group p-2 " action="/NewUser" method="POST">
                        <h2 class="text-center">Crear usuario</h2>
    
                        <label for="Nombre">Nombre de usuario</label>
                        <input class="form-control" type="text" name="Nombre" placeholder="Nombre De Usuario" id="Nombre" >
                        
                        <label for="Email">Correo</label>
                        <input class="form-control" type="Email" name="Email" placeholder="Correo Electronico" id="Email" >
    
                        <label for="Contraseña">Contraseña</label>
                        <input class="form-control" type="password" name="Contraseña" placeholder="Contraseña" id="Contraseña" >
    
                        <div class=" my-2 mx-auto  text-center">
                            <input type="submit" class="btn btn-primary  bg-dark "  value="Enviar" >
                        </div>
    
    
                    </form>
                </div>
    
                <div class="col-12 col-md-10 my-5 m-md-5 border border-dark">
                    <form class="form-group p-2 " action="/FindUser" method="POST">
                        <h2 class="text-center">Iniciar sesion</h2>
    
    
                        
                        <label for="Email">Correo</label>
                        <input class="form-control" type="email" name="Email" placeholder="Correo Electronico" id="Email" >
    
                        <label for="Contraseña">Nombre de usuario</label>
                        <input class="form-control" type="password" name="Contraseña" placeholder="Contraseña" id="Contraseña" >
    
                        <div class=" my-2 mx-auto  text-center">
                            <input type="submit" class="btn btn-primary  bg-dark "  value="Enviar" >
                        </div>
    
    
                    </form>
                </div>
            </div>




            <div class="col-12 col-md-6">

                <div class="col-12 col-md-10 m-md-5 ">
                    <h2 class="text-center">Usuarios</h2>

                    <table class="table table-responsive-sm  table-sm table-striped  table-bordered ">
                        <thead>
                            <tr>
                                <th>Nombre</th>                                
                                <th>ID</th>
                                <th>Telefono</th>
                            </tr>
                        </thead>
                
                        <tbody>
                            <% Users.forEach((db,index)=>{   %>
                                <tr>
                                    <td><%=  db.nombre %></td>
                                    <td><%=  db._id %></td>
                                    <td>
                                    <%  db.Telefono.forEach((obj,index)=>{  %>
                                         <%=  obj.nombre  %>
                                    <%})%>
                                    </td>
                
                                </tr>
                            <%})%>
                        </tbody>
                
                    </table>
                </div>


                <div class="col-12 col-md-10 m-md-5">
                    <h2 class="text-center">Telefonos</h2>
                    <table class=" table table-responsive-sm  table-striped  table-bordered ">
                        <thead>
                            <tr>
                                <th>Telefono</th>                                
                                <th>ID</th>
                                <% if(session ){%>
                                    <th>Comprar</th>
                                <%}%>
                            </tr>
                        </thead>
                
                        <tbody>
                            <% phones.forEach((db,index)=>{  %>
                                <tr>
                                    <td><%=  db.nombre %></td>
                                    <td><%=  db._id %></td>
                
                                    <% if(session ){%>
                                        <td> <a href="/BuyPhone/<%= db._id%>" class="btn btn-primary ml-5">Comprar</a></td>
                                    <%}%>
                
                                </tr>
                            <%})%>
                        </tbody>
                
                    </table>
                </div>

            </div>





            
        </div>





    </article>


<%- include("../partials/footer.ejs")%>

